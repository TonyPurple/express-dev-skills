<head>
    <%- include('../partials/head.ejs') %>

        <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <%- include('../partials/header.ejs') %>
        <h1>Edit Skill</h1>
        <form action="/skills/<%= skill.id %>?_method=PUT" method="POST" autocomplete="off">
            <label for="skill">Skill:
                <input type="text" name="skill" value="<%= skill.skill %>">
            </label>
            <label for="level">Level:
                <input type="number" name="level" value="<%= skill.level %> ">
            </label>
            <label for="description">Description:
                <input type="text" name="description" value="<%= skill.description %> ">
            </label>
            <label for="mastered">Mastered:
                <input type="checkbox" name="done" <%=skill.done ? 'checked' : '' %>>
            </label>
            <button type="submit">Update Skill</button>
        </form>
        <%- include('../partials/footer.ejs') %>
</body>

</html>