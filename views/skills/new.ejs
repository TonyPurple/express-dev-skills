<%- include('../partials/head.ejs') %>

    <br>
    <h1>New Skill</h1>
    <br>
    <form class="form-inline" action="/skills" method="POST" autocomplete="off">
        <label for="skill">Skill:
                    <input class="form-control mb-2 mr-sm-2" type="text" name="skill">
                    </label>
        <label for="level"> Level:
                    <input class="form-control mb-2 mr-sm-2" type="number" name="level">
                    </label>
        <label for="description">Description:
                    <input class="form-control mb-2 mr-sm-2" type="text" name="description">
                    </label>
        <label for="done">Project Completed:
                    <input type="checkbox" name="done">
                    </label>
        <button type="submit" class="btn btn-primary">Save Skill</button>
    </form>
